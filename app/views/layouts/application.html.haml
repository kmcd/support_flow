%html{ lang:'en'}
  %head
    %title Support Flow
    
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    = csrf_meta_tags
    %meta{ name:"viewport", content:"width=device-width, initial-scale=1" }
    
    -# TODO: setup (jammit/grunt/bower) asset manager
    %script{:src => "/jquery-1.11.2.min.js"}
    %script{:src => "/jquery-ui.min.js"}
    %link{:href => "/jquery-ui.min.css", :rel => "stylesheet"}
    %link{:href => "/bootstrap.min.css", :rel => "stylesheet"}
    %script{:src => "/bootstrap.min.js"}
    %script{:src => "/rails.js"}
    %link{:href => "/application.css", :rel => "stylesheet"}
    %script{:src => "/application.js"}
    
  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          %p.navbar-text 
            %b Support Flow
          
        %ul.nav.navbar-nav
          %li.active
            = link_to(requests_path) do
              Requests
              
              -# TODO: change to team.open_requests_count
              - open_count = current_agent.team.requests.where(open:true).count
              - unless open_count.zero?
                %span
                  %small.text-danger
                    = open_count
                    open
          
          %li= link_to 'Guides', guides_path
          %li= link_to 'Agents', agents_path
          %li= link_to 'Customers', customers_path
          %li= link_to 'Need help?', '/help'
            
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a{ href:'#', :class => 'dropdown-toggle navbar-right', 
                  :role => 'button', 'data-toggle' => 'dropdown',
                  'aria-expanded' => false }
              Settings
            
            %ul{ :class => 'dropdown-menu', :role => 'menu' }
              %li
                %a{ href:'#' }
                  Mailboxes
              %li
                %a{ href:'#' }
                  Billing
                  
              %li.divider
              %li
                %a{ href:'#' }
                  Log out

    .container
      = yield
