%section.content
  .row
    .col-lg-6
      .input-group
        %input.form-control{"aria-label" => "...", :placeholder => "Search customers ...", :type => "text"}/
        .input-group-btn
          %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            Search
            %span.caret
          %ul.dropdown-menu.dropdown-menu-right{:role => "menu"}
            %li
              %a{:href => "#"} Awaiting reply
            %li
              %a{:href => "#"} Assigned to you
            %li.dropdown-header{:role => "presentation"}
              %i — Labelled as —
            %li
              %a{:href => "#"} Billing
            %li
              %a{:href => "#"} Urgent
            %li
              %a{:href => "#"} Adwords
            %li.dropdown-header{:role => "presentation"}
              %i — Assigned to —
            %li
              %a{:href => "#"} Rachel
            %li
              %a{:href => "#"} Keith
            %li.dropdown-header{:role => "presentation"}
              %i — Sort by —
            %li
              %a{:href => "#"} Name
            %li
              %a{:href => "#"} Longest wait
            %li.divider
            %li
              %a{:href => "#"} Clear

  %br/

  .box.box-default
    .box-header
      %h3.box-title
        = @customers.size
        %small customers

    .box-body
      - @customers.each do |customer|
        .row.customer
          %hr/

          .col.col-lg-6.col-md-6.col-sm-6.col-xs-6
            %b= link_to customer.name, customer_path(customer)

            - if customer.company
              %span.text-muted
                from
                = link_to customer.company, customers_path(q:'company:1')

            - open_requests = Request.open_count customer
            - closed_requests = Request.open_count customer, false

            &nbsp;

            - unless closed_requests.zero?
              = link_to requests_path(q:'company:1') do
                = closed_requests
                %i.closed.fa.fa-fw.fa-check-circle{style:'color: green;'}

            - unless open_requests.zero?
              &rarr;
              
              = link_to requests_path(q:'company:1') do
                = open_requests
                %i.open.fa.fa-fw.fa-exclamation-circle{style:'color: red;'}


            %br/

            %span.text-muted
              %i.fa.fa-envelope-o
              = mail_to customer.email_address
              %i.fa.fa-phone
              = customer.phone

          .col.col-lg-6.col-md-6.col-sm-6.col-xs-6
            %span.tags.pull-right
              %a.btn.btn-xs.bg-info{:href => "#"} premium
              %a.btn.btn-xs.bg-info{:href => "#"} feature X
              %a.btn.btn-xs.bg-info{:href => "#"} adwords

  .paginator
    .btn-group
      %button.btn.btn-default
        %i.fa.fa-chevron-left
      %button.btn.btn-default 1
      %button.btn.btn-default.active 2
      %button.btn.btn-default 3
      %button.btn.btn-default 4
      %button.btn.btn-default 5
      %button.btn.btn-default 6
      %button.btn.btn-default 7
      %button.btn.btn-default{:type => "button"}
        %i.fa.fa-chevron-right
