%section.content
  .search.row
    .col-lg-12.col-md-12.col-sm-12.col-xs-12
      = form_tag team_customers_path(current_team), id: :search, method: :get, enforce_utf8:false do
        .input-group
          = search_field_tag :q, search_query, id:'query',
              class:'form-control', placeholder:"Search customers ..."

          .input-group-btn
            = button_tag 'Search', class:'btn btn-default'
            = button_tag class:'btn btn-default dropdown-toggle',
                'aria-expanded' => 'false', 'data-toggle' => 'dropdown' do
              Filter
              %span.caret

            %ul.filter.dropdown-menu.dropdown-menu-right{:role => "menu"}
              %li

  %br/

  .box.box-default
    .box-body
      .summary
        %p.text-muted= page_entries_info @customers

      - @customers.each do |customer|
        .row.customer
          %hr/

          .col.col-lg-6.col-md-6.col-sm-7.col-xs-6

            %b= link_to customer.name, customer_path(customer)

            - if customer.company
              %span.text-muted
                from
                = link_to customer.company, team_customers_path(current_team, q:'company:1')

            - open_requests = Request.open_count customer
            - closed_requests = Request.open_count customer, false

            &nbsp;

            - unless closed_requests.zero?
              = link_to team_requests_path(current_team, q:'company:1') do
                = closed_requests
                %i.closed.fa.fa-fw.fa-check-circle{style:'color: green;'}

            - unless open_requests.zero?
              &rarr;

              = link_to team_requests_path(current_team, q:'company:1') do
                = open_requests
                %i.open.fa.fa-fw.fa-exclamation-circle{style:'color: red;'}


            %br/

            %span.text-muted
              %i.fa.fa-envelope-o
              = mail_to customer.email_address
              %i.fa.fa-phone
              = customer.phone

          .col.col-lg-6.col-md-6.col-sm-5.col-xs-6
            %span.tags.pull-right
              %a.btn.btn-xs.bg-info{:href => "#"} premium
              %a.btn.btn-xs.bg-info{:href => "#"} feature X
              %a.btn.btn-xs.bg-info{:href => "#"} adwords

  = will_paginate @customers
