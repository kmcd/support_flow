<% if @outbound_email.errors[:recipients].any? %>
  $(".recipients.error.hidden").removeClass('hidden')
  <% messages = @outbound_email.errors[:recipients].join(", ").html_safe %>
  $(".recipients.error .addresses").text("<%= messages %>")
<% else %>
  $(".recipients.error").addClass('hidden')
<% end %>

<% if @outbound_email.errors[:message_content] %>
  $(".message_content.error.hidden").removeClass('hidden')
<% else %>
  $(".recipients.error").addClass('hidden')
<% end %>

