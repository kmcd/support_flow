= form_for(@agent, html:{class:'form-horizontal'}) do |form|

  %section.content-header
    = link_to 'Cancel', agent_path(@agent),class:'btn btn-default'
    = form.button 'Save', class:'btn btn-default'

  %section.content
    .box
      .box-header.with-border
        %h3
          %small.text-muted
            Edit agent

        = flash[:errors]

      .box-body
        .form-group.text-muted
          = form.label :name, 'Name', class:'col-sm-2 control-label'

          .col-sm-6.col-xs-6
            = form.text_field :name, class:'form-control',
                placeholder:'Agent name'
                
        .form-group.text-muted
          = form.label :name, 'Phone', class:'col-sm-2 control-label'

          .col-sm-6.col-xs-6
            = form.text_field :phone, class:'form-control', 
                placeholder:'Agent phone number'
                
        .form-group.text-muted
          = form.label :email_address, 'Email', class:'col-sm-2 control-label'

          .col-sm-6.col-xs-6
            = form.text_field :email_address, class:'form-control', 
                placeholder:'Agent email address'

        .form-group
          = form.label :notes, 'Notes', class:'col-sm-2 control-label text-muted'

          .col-sm-9.col-xs-9
            = form.text_area :notes, class:'form-control'

:javascript
  $(function() {
    $('#agent_notes').redactor({
      focus: false,
      minHeight: 250,
      replaceDivs: false,
      deniedTags: [],
      removeEmpty: false,
      replaceTags: [],
      pastePlainText: false
    })
  });
