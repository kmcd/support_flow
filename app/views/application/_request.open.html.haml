%li
  %i.fa.fa-envelope.bg-red

  .timeline-item
    %span.time
      %i.fa.fa-clock-o= timeline_date activity

    %h3.timeline-header
      - owner_link activity
      opened
      - link_to_request activity
      - request_name activity

      .timeline-body
        - if email = Email.find_by_id(activity.parameters['email_id'])
          = email.message.text