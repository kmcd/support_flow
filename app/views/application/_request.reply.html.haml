%li
  %i.fa.fa-mail-reply.bg-teal

  .timeline-item
    %span.time
      %i.fa.fa-clock-o
      = timeline_date activity

    %h3.timeline-header
      - owner_link activity
      replied
      - link_to_request activity
      = activity.email.message.subject

    - if activity.email.present?
      .timeline-body
        - # FIXME: reset app CSS style to use native email presentation
        = email_content activity.email

        - unless activity.email.attachments.empty?
          %span.text-muted
            Attachments:
  
          - activity.email.attachments.each do |attachment|
            = link_to attachment.name, email_attachment_path(attachment)