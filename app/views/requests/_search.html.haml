.search.row
  .query.col-md-6.col-md-offset-1.col-sm-6.col-sm-offset-1.col-xs-10.col-xs-offset-1
    = form_tag( requests_path, method:'get', id:'search' ) do |form|
      .form-group
        %input.input-lg{ class:'form-control query', type:'text', name:'q', 
          placeholder:placeholder, value:query, id:'query' }
        
  .filters.col-md-4.col-md-offset-0.col-sm-4.col-sm-offset-0.col-xs-11.col-xs-offset-1
    .btn-group
      .btn-group
        %button{ :class => 'btn btn-default btn-xs dropdown-toggle',
          :type => 'button', 'data-toggle' => 'dropdown', 
          'aria-expanded' => false}
        
          %span.text-muted
            Filters
          %span.caret
        
        %ul{ :class => 'dropdown-menu filter', :role => 'menu' }
          %li
            %a{:href=>'#', 'data-facet' => facet(:open) }
              Open
              
          %li
            %a{:href=>'#', 'data-facet' => facet(:closed) }
              Closed
              
          %li
            %a{:href=>'#', 'data-facet' => agent_facet(current_agent) }
              Your requests
              
          %li.divider
          
          %li
            %a{:href=>'#', 'data-facet' => "" }
              Clear filters
      
      .btn-group
        %button{ :class => 'btn btn-default btn-xs dropdown-toggle',
          :type => 'button', 'data-toggle' => 'dropdown',
          'aria-expanded' => false}
          %span.text-muted
            Label
          %span.caret
          
        %ul{ :class => 'dropdown-menu filter', :role => 'menu' }
          %li
            - current_agent.team.labels.each do |label|
              %a{:href=>'#', 'data-facet' => label_facet(label) }
                = label

      .btn-group
        %button{ :class => 'btn btn-default btn-xs dropdown-toggle',
            :type => 'button', 'data-toggle' => 'dropdown', 
            'aria-expanded' => false}
          %span.text-muted
            Agent
          %span.caret
            
        %ul{ :class => 'dropdown-menu filter', :role => 'menu' }
          - current_agent.team.agents.sort_by(&:name).each do |agent|
            %li
              %a{:href=>'#', 'data-facet' => agent_facet(agent) }
                = agent.name
                
      .btn-group
        %button{ :class => 'btn btn-default btn-xs dropdown-toggle',
            :type => 'button', 'data-toggle' => 'dropdown', 
            'aria-expanded' => false}
          %span.text-muted
            Customer
          %span.caret
            
        %ul{ :class => 'dropdown-menu filter', :role => 'menu' }
          - current_agent.team.customers.sort_by(&:name).each do |customer|
            %li
              %a{:href=>'#', 'data-facet' => customer_facet(customer) }
                = customer.name
          
      .btn-group
        %button{ :class => 'btn btn-default btn-xs dropdown-toggle',
            :type => 'button', 'data-toggle' => 'dropdown', 
            'aria-expanded' => false}
          %span.text-muted
            Sort
          %span.caret
            
        %ul{ :class => 'dropdown-menu filter', :role => 'menu' }
          %li
            %a{:href=>'#', 'data-facet' => sort_facet(:new) }
              Newest
          %li
            %a{:href=>'#', 'data-facet' => sort_facet(:old) }
              Oldest
          %li
            %a{:href=>'#', 'data-facet' => sort_facet(:messages) }
              Most emails
          %li
            %a{:href=>'#', 'data-facet' => sort_facet(:updated) }
              Recently upated
