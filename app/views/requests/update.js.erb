<% if @request.previous_changes[:agent_id] %>
  $('#assignee').text("<%= @request.agent.email_address %>");
  $("#assignee").effect("highlight", "", 3000);
  $(".activities").append("<%= escape_javascript render(partial:'activity', object:@activity) %>");
  $("#public_activity_activity_<%= @activity.id %>").effect("highlight", "", 3000);
<% end %>

<% if @request.previous_changes[:labels] %>
  $("div.labels span.labels").html("<%= escape_javascript render(partial:'label', collection:@request.labels) %>")
<% end %>

<% if @request.previous_changes[:name] %>
  $(".request.row .name").text("<%= escape_javascript @request.name %>")
  $(".request.row .name").toggle()
  $(".request.row form.name-edit").addClass('hide')
<% end %>
