.request.row
  .col-md-9.col-md-offset-1
    %h2
      = @request.name
      
      %small
        %i= "##{@request.id}"
        
      - if @request.open?
        %button.btn.btn-danger
          %span.glyphicon.glyphicon-exclamation-sign
          Open
      - else
        %button.btn.btn-success
          %span.glyphicon.glyphicon-ok-circle
          Closed
    
    .labels
      - @request.tags.each do |tag|
        %button.btn.btn-primary.btn-xs
          = Faker::Commerce.department
        
    %br/
    
    .actions.btn-group
      - %w[ Reply Assign Label Rename Merge Close ].each {|_| default_button _ }

%br/

.request.row

  -# FIXME: change to request.activities
  
  - @request.messages.each do |message|
    .message
      .col-md-9.col-md-offset-1
        %a.pull-right{:href => '#'}
          %img.img-rounded{:src => message.sender.avatar }
          
        %h4
          %small
            = description_for @request, message
            on
            %span.mark= message.created_at.to_s(:long)
            by
          = link_to( message.sender.name, '#')
          
      .content.col-md-8.col-md-offset-1
        %blockquote
          %p= message.content.body
       
.request.row
  .actions.col-md-9.col-md-offset-1
    .btn-group
      - %w[ Reply Assign ].each {|_| default_button _ }
        
%br/
%br/
%br/
