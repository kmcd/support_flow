<% if @guide.errors.empty? %>
  $(".name.form-group").removeClass('has-error')
  $(".name.form-group label.error").addClass('hide')
  
  $("button.saved").removeClass('hide');
  setTimeout(function(){ $("button.saved").addClass('hide') },3000)
<% else %>
  $(".name.form-group").addClass('has-error')
  $(".name.form-group label.error").removeClass('hide')
  $(".name.form-group label.error").html('<%= @guide.errors.full_messages.join(' ') %>')
<% end %>
