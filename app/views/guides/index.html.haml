.header.row
  .col-md-offset-1.col-md-9.col-sm-offset-1.col-sm-9.col-xs-12
    %h3
      Customer guides
      
      %small.text-muted
        are available at
        = link_to public_guide_url(current_team.subdomain)
        
    %p.text-muted
      %small
        See our
        %a{href:'#'} help guides for subdomains &amp; custom domains 
        &hellip;
        
.guides.row
  .col-md-offset-1.col-md-9.col-sm-offset-1.col-sm-9.col-xs-12
    %table.table.table-responsive
      %thead
        %tr
          %th
          %th
          %th.text-right views
        
      %tr
        - home_page = Guide.index current_team
        %td= link_to "home page", guide_path(home_page)
        %td= link_to_guide_url current_team, home_page
          
        %td.text-right= home_page.view_count
        
      - @guides.each do |guide|
        %tr
          %td= link_to guide.name, guide_path(guide)
          %td= link_to_guide_url current_team, guide
          %td.text-right= guide.view_count

.actions.row
  .col-md-offset-1.col-md-9.col-sm-offset-1.col-sm-9.col-xs-12
    %p
      = link_to "New guide", new_guide_path, class:'btn btn-default'
      &nbsp;
      = link_to "Customise your pages appearance", guide_path(Guide.template(current_team))
